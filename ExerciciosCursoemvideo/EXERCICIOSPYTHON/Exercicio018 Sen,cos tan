import math
a0 = float(input('Digite o Ã‚ngulo: '))
a1 = math.cos(math.radians(a0))
a2 = math.tan(math.radians(a0))
a3 = math.sin(math.radians(a0))

print('O angulo {} tem o COS de {:.2f}!'.format(a0, a1))
print('O angulo {} tem a TAN de {:.2f}!'.format(a0, a2))
print('O angulo {} tem o SEN de {:.2f}!'.format(a0, a3))
